@{
    ViewBag.Title = "充值记录";
    Layout = "~/Views/Shared/boss.cshtml";
}
@model IEnumerable<卓越项目.Models.chongzhi>

<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<style>
    th {
        text-align: center;
    }
</style>
<div class="container-fluid">
    <div class="container-fluid cm-container-white" style="background-color: white; margin: auto auto auto -1.2%; width: 102.5%;">
        <h1 style="font-weight:900;text-align:center;color:#0f8ab4">充值记录</h1>
        <form action="~/Boss/chongzhi" method="post">
            <p style="text-align:center">
                充值时间:<input id="date1" name="date1" type="date" style="border-radius:15px;border:1px solid black" />&nbsp;&nbsp;&nbsp;&nbsp;-&nbsp;&nbsp;&nbsp;&nbsp;
                <input type="date" name="date2" id="date2" style="border-radius:15px;border:1px solid black" /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                用户名:<input type="text" name="text1" id="text1" />
                <input type="submit" id="sai" class="btn btn-info" value="筛选" />
            </p>
        </form>
        <table id="table" class="table text-center" style="margin-top:2%">
            <tr class="text-center">
                <th>
                    编号
                </th>
                <th>
                    用户名
                </th>
                <th>
                    充值金额
                </th>
                <th>
                    充值后余额
                </th>
                <th>
                    充值时间
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.id
                    </td>
                    <td>
                        @item.User.name
                    </td>
                    <td>
                        @item.money
                    </td>
                    <td>
                        @item.houmoney
                    </td>
                    <td>
                        @item.date
                    </td>
                </tr>
            }
        </table>
      
        @if (Model.Count() == 0)
        {
            <p style="text-align:center;font-weight:900;letter-spacing:5px;font-size:24px">暂无充值记录</p>
        }
    </div>
</div>
