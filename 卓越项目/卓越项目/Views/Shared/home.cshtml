                    </ul>
                </div>
            </div>
        </div>
    </div>
    <header id="cm-header">
        <nav class="cm-navbar cm-navbar-primary">
            <div class="btn btn-primary md-menu-white hidden-md hidden-lg" data-toggle="cm-menu"></div>
            <div class="cm-flex">
                @*<h1>@Session["page"]</h1>*@
                <form id="cm-search" action="index.html" method="get">
                    <input type="search" name="q" autocomplete="off" placeholder="Search...">
                </form>
            </div>

            <div class="dropdown pull-right">
                <button class="btn btn-primary md-notifications-white" data-toggle="dropdown"> <span id="zong" class="label label-danger"></span> </button>
                <div class="popover cm-popover bottom">
                    <div class="arrow"></div>
                    <div class="popover-content">
                        <div class="list-group">
                            <p id="zanwu" style="display:none;text-align:center;font-size:20px;font-weight:800;">暂无消息</p>

                            <a id="jianyi" href="~/User/jianyi" class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    <i class="fa fa-fw fa-envelope"></i><span id="b_t2">管理员回复您的建议了</span>
                                </h4>
                                <p class="list-group-item-text" style="color:#1863d4">点击查看</p>
                            </a>
                        </div>
                          </div>
                </div>
            </div>
            <div class="dropdown pull-right">
                <button class="btn btn-primary md-account-circle-white" data-toggle="dropdown">
                    <img style="width:40px ;height:40px;margin-left:-5px;border-radius:50%" src="@Session["touxiang"]" />
                </button>
                <ul class="dropdown-menu">
                    <li class="disabled text-center">
                        <a style="cursor:default;"><strong>@Session["name"]</strong></a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="~/User/user?id=@Session["id"]"><i class="fa fa-fw fa-user"></i> 个人中心</a>
                    </li>
                    <li>
                        <a href="~/User/xiugai?id=@Session["id"]"><i class="fa fa-fw fa-cog"></i> 修改信息</a>
                    </li>
                    <li>
                        <a href="~/Login/Index"><i class="fa fa-fw fa-sign-out"></i> 退出登录</a>
                    </li>
                </ul>
