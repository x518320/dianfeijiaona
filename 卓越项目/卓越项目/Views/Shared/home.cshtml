    <div id="global">
        @RenderBody()
    </div>
    <script src="~/Content/demo/assets/js/lib/jquery.min.js"></script>
    <script src="~/Content/demo/assets/js/jquery.mousewheel.min.js"></script>
    <script src="~/Content/demo/assets/js/jquery.cookie.min.js"></script>
    <script src="~/Content/demo/assets/js/fastclick.min.js"></script>
    <script src="~/Content/demo/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/demo/assets/js/clearmin.min.js"></script>
    <script src="~/Content/demo/assets/js/demo/home.js"></script>
    <script>
        $(function () {

            $.ajax({
                url: "/User/xiaoxi",
                type: "get",
                async: false,
                success: function (data) {
                    $("#zong").html(data);
                    if (data == "0") {
                        $("#zanwu").show();
                        $("#zong").hide();
                        $("#jianyi").hide();
                    } else {
                        $("#zanwu").hide();
                        $("#zong").show();
                        $("#jianyi").show();
                    }

                },
                error: function () {
                    alert("出错啦...")
                }
            })
        })
    </script>
