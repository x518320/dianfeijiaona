@{
    ViewBag.Title = "缴费详情";
    Layout = "~/Views/Shared/boss.cshtml";
}
@model IEnumerable<卓越项目.Models.order>

<style>
    th {
        text-align: center;
    }
</style>
<div class="container-fluid  ">
    <div class="container-fluid cm-container-white " style="background-color: white; margin: auto auto auto -1.2%; width: 102.5%;">
        <h1   style="font-weight:900;text-align:center;color:#0f8ab4">缴费详情</h1>

        <form action="~/Boss/order" method="post">
            <p style="text-align:center">
                缴费时间:<input id="date1" name="date1" type="date" style="border-radius:15px;border:1px solid black" />&nbsp;&nbsp;&nbsp;&nbsp;-&nbsp;&nbsp;&nbsp;&nbsp;
                <input type="date" name="date2" id="date2" style="border-radius:15px;border:1px solid black" /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                用户名:<input type="text" name="text1" id="text1" />
                <input type="submit" id="sai" class="btn btn-info" value="筛选" />
            </p>
        </form>
        <table  class="table text-center">
            <tr class="text-center">
                <th>
                    编号
                </th>
                <th>
                    用户名
                </th>
                <th>
                    房间
                </th>
                <th>
                    上次止表
                </th>
                <th>
                    本次止表
                </th>
                <th>
                    本月用电
                </th>
                <th>
                    电价
                </th>
                <th>
                    金额
                </th>
                <th>
                    缴费时间
                </th>
            </tr>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @item.id
                    </td>
                    <td>
                        <img style="width:40px ;height:40px;margin-left:-5px;border-radius:50%" src="@item.User.url" />

                        @item.User.name
                    </td>
                    <td>
                        @item.fang.dong @item.fang.danyuan 单元 @item.fang.louceng 楼 @item.fang.fangjian
                    </td>
                    <td>
                        @item.up
                    </td>
                    <td>
                        @item.now
                    </td>
                    <td>
                        @(item.now-item.up)
                    </td>
                    <td>
                        @item.dianjia
                    </td>
                    <td>
                        @item.money
                    </td>
                    <td>
                        @item.date
                    </td>
                </tr>
            }
        </table>
      
        @if (Model.Count() == 0)
        {
            <p style="text-align:center;font-weight:900;letter-spacing:5px;font-size:24px">暂无缴费记录</p>
        }
    </div>
</div>
